<form {{action "save" on="submit"}}>
  <div>
    <label> Title </label>
      {{input type="text" value=model.title}}
  </div>
  <div>
    <label> Body </label>
      {{!input type="text" value=model.body}}
      {{textarea rows="5" value=model.body}}
  </div>
  <div>
    <input class='btn red darken-2' type="submit" value="Save">
    <button class='btn red darken-2' {{action 'cancel'}}>Cancel</button>
  </div>
</form>
